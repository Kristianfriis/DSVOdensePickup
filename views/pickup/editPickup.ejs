<%- contentFor('header') %> 
<%- include('../partials/navInside') %> 

<%- contentFor('body') %>
<h2><i class="fas fa-edit"></i><i class="fa fa-car fa-lg"></i> Edit Pickup</h2>

<form action="/pickup/newpickup" method="POST">
    <div class="row">
        <div class="six columns">
            <label for="name" style="text-align: left;">Name:</label>
            <input class="u-full-width" type="text" id="name" name="name" placeholder="Firma A/S" value="<%= data.name %> ">
        </div>
        <div class="six columns">
            <label for="address" style="text-align: left;">Address:</label>
            <input class="u-full-width" type="text" id="address" name="address" placeholder="Address 123" value="<%= data.address %> ">
        </div>
    </div>
    <div class="row">
        <div class="six columns">
            <label for="postalcode" style="text-align: left;">Postal Code:</label>
            <input class="u-full-width" type="text" id="postalcode" name="postalcode" placeholder="5250" value="<%= data.postalcode %> ">
        </div>
        <div class="six columns">
            <label for="city" style="text-align: left;">City:</label>
            <input class="u-full-width" type="text" id="city" name="city" placeholder="Odense" value="<%= data.city %> ">
        </div>
    </div>
    <div class="row">
        <div class="six columns">
            <label for="phone" style="text-align: left;">Phone Number:</label>
            <input class="u-full-width" type="tel" id="phone" name="phone" placeholder="+45 12 34 56 78" value="<%= data.phone %> ">
        </div>
    </div>
    <!-- Daily pick up times -->
    <div class="row">
        <div style="display: flex; justify-content: center;">
            <div>
                <div class="eleven columns" style="text-align: left;">
                    <label for="monday">Monday:</label>
                    <div class="four columns">
                        <label>From:</label>
                        <input class="u-full-width" type="text" id="monday" name="mondayfrom" placeholder="14:00" value="<%= data.mondayfrom %> ">
                    </div>
                    <div class="four columns">
                        <label>To:</label>
                        <input class="u-full-width" type="text" id="monday" name="mondayto" placeholder="15:00" value="<%= data.mondayto %> ">
                    </div>
                </div>
            </div>
            <div>
                <div class="eleven columns" style="text-align: left;">
                    <label for="tuesday">Tuesday:</label>
                    <div class="four columns">
                        <label>From:</label>
                        <input class="u-full-width" type="text" id="tuesday" name="tuesdayfrom" placeholder="14:00" value="<%= data.tuesdayfrom %> ">
                    </div>
                    <div class="four columns">
                        <label>To:</label>
                        <input class="u-full-width" type="text" id="tuesday" name="tuesdayto" placeholder="15:00" value="<%= data.tuesdayto %> ">
                    </div>
                </div>
            </div>
            <div>
                <div class="eleven columns" style="text-align: left;">
                    <label for="wednesday">Wednesday:</label>
                    <div class="four columns">
                        <label>From:</label>
                        <input class="u-full-width" type="text" id="wednesday" name="wednesdayfrom" placeholder="14:00" value="<%= data.wednesdayfrom %> ">
                    </div>
                    <div class="four columns">
                        <label>To:</label>
                        <input class="u-full-width" type="text" id="wednesday" name="wednesdayto" placeholder="15:00" value="<%= data.wednesdayto %> ">
                    </div>
                </div>
            </div>
            
            <div>
                <div class="eleven columns" style="text-align: left;">
                    <label for="thursday">Thursday:</label>
                    <div class="four columns">
                        <label>From:</label>
                        <input class="u-full-width" type="text" id="thursday" name="thursdayfrom" placeholder="14:00" value="<%= data.thursdayfrom %> ">
                    </div>
                    <div class="four columns">
                        <label>To:</label>
                        <input class="u-full-width" type="text" id="thursday" name="thursdayto" placeholder="15:00" value="<%= data.thursdayto %> ">
                    </div>
                </div>
            </div>
            <div>
                <div class="eleven columns" style="text-align: left;">
                    <label for="friday">Friday:</label>
                    <div class="four columns">
                        <label>From:</label>
                        <input class="u-full-width" type="text" id="friday" name="fridayfrom" placeholder="13:00" value="<%= data.fridayfrom %> ">
                    </div>
                    <div class="four columns">
                        <label>To:</label>
                        <input class="u-full-width" type="text" id="friday" name="fridayto" placeholder="14:00" value="<%= data.fridayto %> ">
                    </div>
                </div>
            </div>
        </div>
        
        <div style="display: flex;">
            <div>
                <div class="four columns">
                    <label for="collies">Collies:</label>
                    <input class="u-full-width" type="number" id="collies" name="collies" placeholder="1" value="<%= data.collies %> ">
                </div>
                <div class="four columns">
                    <label for="weight">Weight:</label>
                    <input class="u-full-width" type="number" id="weight" name="weight" placeholder="500" value="<%= data.weight %> ">
                </div>
            </div>
        
            
        </div>
        <div style="display: flex;">
            <button class="u-pull-left button-primary" type="submit" name="submit">Update Pickup</button>
        </div>
        
        
   
</form>